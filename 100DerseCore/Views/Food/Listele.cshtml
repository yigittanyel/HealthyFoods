@using _100DerseCore.Models
@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<Food>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yiyeceklerin Listesi</h1>
<a href="/Food/FoodEkle/" class="btn btn-success">Yeni Yiyecek Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Resim Url</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Stok</th>
            <th scope="col">Kategorisi</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.FName</td>
                <td>@x.FoodDesc</td>
                <td>@x.ImageUrl</td>
                <td>@x.Price</td>
                <td>@x.Stock</td>
                <td>@x.Category.Name</td>
                <td><a href="/Food/FoodSil/@x.FoodId" class="btn btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a></td>
                <td><a href="/Food/FoodGetir/@x.FoodId" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Listele", new { page }))


