@using _100DerseCore.Models
@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<Category>
@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategori Listesi</h1>
<a href="/Category/CategoryEkle/" class="btn btn-success">Yeni Kategori Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Durum</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.Desc</td>
                <td><b>@(x.CategoryStatus ? "Aktif":"Pasif") </td>
                <td><a href="/Category/CategorySil/@x.CategoryId" class="btn btn-danger" onclick="return confirm('Silmek istediğinizden emin misiniz?');">Sil</a></td>
                <td><a href="/Category/CategoryGetir/@x.CategoryId" class="btn btn-primary">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Listele",new { page }))

